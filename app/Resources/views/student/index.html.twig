{% extends 'base.html.twig' %}
{% set currentMenu = "student" %}
{% block body %}
    <h1>Liste des élèves</h1>
    <a href="{{ path('school_student_new') }}" class="btn btn-success">Ajouter un élève</a>
    <table class="table table-striped table-bordered table-condensed ">
        <thead>
        <tr>
            <th>Prenom</th>
            <th>Famille</th>
            <th>Date de naissance</th>
            <th>Genre</th>
            <th>Editer</th>
        </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.firstName }}</td>
                <td>{{ student.family }}</td>
                <td>{% if student.dateOfBirth %}{{ student.dateOfBirth|date('d-m-Y') }}{% endif %}</td>
                <td>{{ student.gender }}</td>

                <td>
                    {{ editLink(path('school_student_edit', { 'id': student.id })) }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>




{% endblock %}
