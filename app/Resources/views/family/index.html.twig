{% extends 'base.html.twig' %}
{% set currentMenu = "family" %}
{% block body %}
    <h1>Liste des familles</h1>
    <a href="{{ path('school_family_new') }}" class="btn btn-success">Ajouter une famille</a>
    <table class="table table-striped table-bordered table-condensed ">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for family in families %}
            <tr>
                <td>{{ family.username }}</td>
                <td>{{ family.email }}</td>
                <td>{{ editLink(path('school_family_edit', { 'id': family.id }) ) }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
