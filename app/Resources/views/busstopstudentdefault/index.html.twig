{% extends 'base.html.twig' %}
{% set currentMenu = "settings" %}
{% block body %}
    <h1>Paramétrage par défaut des trajets</h1>

    <a href="{{ path('bug_student-default_new') }}" class="btn btn-success">Ajouter un trajet par défaut</a>
    {% for breakDown in breakDownPerTrajet %}
        <table class="table table-striped table-bordered table-condensed ">
            <thead>
            <tr>
                <th>Nom</th>
                <th>{{ breakDown[0].busStop.busJourney }}</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for busStopStudentDefault in breakDown %}
                <tr>
                    <td>{{ busStopStudentDefault.student }} </td>
                    <td>{{ busStopStudentDefault.busStop }} </td>
                    <td>{{ editLink(path('bug_student-default_edit', { 'id': busStopStudentDefault.id })) }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endfor %}

{% endblock %}
